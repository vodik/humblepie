#!/usr/bin/env bash
# vim: ft=sh
# set -x

key="$1"
hib_bundle=55
prefix="${USER}-${hib_bundle}-${key}"
dump="${prefix}-dump.txt"
checklist="${prefix}.txt" 
gamelist="${prefix}.txt"

links -html-numbered-links 1 \
  -dump https://www.humblebundle.com/downloads\?key\="${key}" >$dump

declare -a list
## generate the array as a list of game filenames
while read -r line; do
  list+=("$line")
done <$dump

declare -A newlist
for a in "${list[@]}"; do
  ## i want every element that matches *files*/ ...
  b="${a##*files*/}"
  [[ $b == "$a" ]] || {
    ## and then from those, strip ?key=* out of the end
    c="${b%%?key*}"
    d="${b##*t=}"
    ## finally i want to get each element which matches the pattern...
    ## *downloads*#
    ## and strip from those, everything up to and including the octothorpe
    newlist+=(["$c"]="$d")
  }
done
num=1
for f in "${!newlist[@]}"; do
  printf '%s\t%s\t%s\n' "$num" "$f" "${newlist[$f]}"
  ((num++))
done
# for ((i=1;i<="${#newlist[@]}";i++)); do
#   printf '%s\t%s\t%s' "${i}." "${newlist[$i-1]}"
# done
# list="${list[@]%%files*/}"
# list="${list[@]##?}"
# for ((i=1;i<="${#list[@]}";i++)); do
#   printf "%s\t%s\n" "${i}." "${list[$i-1]}" >$checklist
# done
exit

